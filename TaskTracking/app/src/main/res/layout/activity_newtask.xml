<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/login_btn"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/textVie1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="新建任务" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@color/gray_cc"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView2"
                    style="@style/style_text"
                    android:layout_marginLeft="10dp"
                    android:text="任务信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView3"
                    style="@style/style_text"
                    android:text="*任务名称：" />
                <EditText
                    android:id="@+id/edt_newTask_taskname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入任务名称(6-10个字符)"
                    android:padding="5.0dip"
                    android:textColor="#ff3b3b3b"
                    android:textSize="16.0sp" >
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView111"
                    style="@style/style_text"
                    android:text="*任务类型：" />
                <RadioGroup
                    android:id="@+id/rdgp_newtask_type"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_newtask_hezuo"
                        android:text="分时"
                        android:checked="true"
                        style="@style/style_text"/>
                    <RadioButton
                        android:id="@+id/rb_newtask_time"
                        android:text="同时"
                        style="@style/style_text"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView5"
                        style="@style/style_text"
                        android:text="*任务详情：" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                        <EditText
                            android:id="@+id/edt_newTask_taskinfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入任务详情(10-150个字符)"
                            android:inputType="textMultiLine"
                            android:padding="5.0dip"
                            android:textColor="#ff3b3b3b"
                            android:textSize="16.0sp"></EditText>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView11"
                    style="@style/style_text"
                    android:text="*截止时间：" />
                <TextView
                    android:id="@+id/tv_newtask_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="请选择时间"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView144"
                    style="@style/style_text"
                    android:text="*接收部门：" />
                <Spinner
                    android:id="@+id/sn_newTask_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:gravity="top">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textV1iew112"
                        style="@style/style_text"
                        android:text=" 备注信息：" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                        <EditText
                            android:id="@+id/edt_newTask_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入备注信息(0-150个字符)"
                            android:inputType="textMultiLine"
                            android:padding="5.0dip"
                            android:textColor="#ff3b3b3b"
                            android:textSize="16.0sp"></EditText>
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginRight="30dp"
                android:layout_gravity="right"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_newtask_paifa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_item"
                    android:textColor="@color/gray"
                    android:text="派发任务" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
            </LinearLayout>
            </LinearLayout>
    </ScrollView>
    </LinearLayout>